@using TwentyOne.Shared.Models

<div class="card @GetCardClass()">
    @if (Card.IsFaceUp)
    {
        <div class="card-content">
            <div class="card-rank">@GetRankSymbol()</div>
            <div class="card-suit">@GetSuitSymbol()</div>
        </div>
    }
    else
    {
        <div class="card-back">ðŸ‚ </div>
    }
</div>

@code {
    [Parameter] public CardDto Card { get; set; } = new();

    private string GetCardClass()
    {
        if (!Card.IsFaceUp) return "card-hidden";
        
        return Card.Suit switch
        {
            CardSuit.Hearts or CardSuit.Diamonds => "card-red",
            _ => "card-black"
        };
    }

    private string GetRankSymbol()
    {
        return Card.Rank switch
        {
            CardRank.Ace => "A",
            CardRank.Jack => "J",
            CardRank.Queen => "Q",
            CardRank.King => "K",
            _ => ((int)Card.Rank).ToString()
        };
    }

    private string GetSuitSymbol()
    {
        return Card.Suit switch
        {
            CardSuit.Hearts => "â™¥",
            CardSuit.Diamonds => "â™¦",
            CardSuit.Clubs => "â™£",
            CardSuit.Spades => "â™ ",
            _ => ""
        };
    }
}

<style>
    .card {
        width: 80px;
        height: 112px;
        border: 2px solid #333;
